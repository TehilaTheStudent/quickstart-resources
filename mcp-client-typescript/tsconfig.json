{
  "compilerOptions": {
    "target": "ES2020", // Slightly broader compatibility
    "module": "Node16", // Uses Node's default `require/module.exports`
    "outDir": "./dist", // Output compiled JS here
    "rootDir": "./", // Keep all your TS source code in "src"
    "strict": true, // Catch more errors early
    "esModuleInterop": true, // Allow default imports from CJS modules
    "skipLibCheck": true, // Skip .d.ts checks for faster build
    "forceConsistentCasingInFileNames": true, // Prevent case-sensitivity issues
    "moduleResolution": "nodenext",
    "declaration": true
  },
  "include": [
    "index.ts"
  ], // Compile all TS files in "src"
  "exclude": [
    "node_modules"
  ]
}